<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <title>Books</title>

  </head>


  <body>

  <% if flash[:success] %>
  <div class="flash">
    <%= flash[:success] %>
    </div>
    <% end %>
    <h1>Books</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
       <% @books.each do |book| %>
       <tr>
       <td><%= book.title %></td>

       <td><%= book.body %></td>

       <td><%= link_to 'Show', book_path(book.id)%></td>

       <td><%= link_to 'Edit', edit_book_path(book.id)%></td>

       <td><%= link_to 'Destroy', book_path(book.id), method: :delete, data: {confirm: "Are you sure?" } %></td>


       </tr>

       <% end %>
      </tbody>
    </table>
    <h2>New book</h2>

    <% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>


    <%= form_with model:@book, local:true do |f| %>

    <p>Title</p>
    <%= f.text_field :title %>

    <p>Body</p>
    <%= f.text_area :body %>
<br>
<%= f.submit 'Create Book' %>

    <% end %>
  </body>
</html>